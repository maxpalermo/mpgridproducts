<form id="tire-search-form" class="needs-validation" novalidate>
    <div class="d-flex justify-content-center align-items-center mt-2 mb-2" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);">
            <div class="search-bar-dark d-flex" style="width: 60%;">
                <input 
                    type="text" 
                    class="search-input-dark" 
                    id="tire-measure" 
                    placeholder="Inserisci la misura del pneumatico (es: 225/45R17, 195/65R15, 2055516)" 
                    required
                />
                <button type="submit" class="search-button-dark">
                    <i class="material-icons">search</i>
                    <span class="ms-2">Cerca</span>
                </button>
            </div>
    </div>
</form>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('tire-search-form');
    const measureInput = document.getElementById('tire-measure');
    
    // Gestione submit form
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        const measure = measureInput.value.trim();
        
        if (measure) {
            // Reindirizza alla pagina di ricerca con il parametro misura
            window.location.href = '{{ frontControllerUrl }}?ajax=1&action=searchProducts&measure=' + encodeURIComponent(measure);
        }
    });
});
</script>

